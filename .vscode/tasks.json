{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build backend",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/SingularSystemsTechnicalAssessment.Server/SingularSystemsTechnicalAssessment.Server.csproj"
      ],
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "npm: install (frontend)",
      "type": "process",
      "command": "npm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}/singularsystemstechnicalassessment.client"
      },
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
